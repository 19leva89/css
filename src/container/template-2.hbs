<div class="page">
	<div class="page_content">
		<div class="page_block">
			<header class="header row g-0">
				<div class="col-3">
					{{> logo}}
				</div>

				<nav class="header_nav col-9">
					<div class="header_nav_right">
						{{> nav list=header}}
					</div>
				</nav>
			</header>
		</div>

		<div class="page_block">
			<div class="hero">
				{{#with hero}}
					{{> hero title=title text=text}}
					<a class="button" href="{{button.url}}">{{button.text}}</a>
				{{/with}}
			</div>
		</div>

		<div class="page_block">
			<div class="row">
				<div class="col-6">
					<div class="preview">
						<div class="preview_header">
							<span class="preview_date">Nov 12</span>
							<span class="preview_category">World</span>
							<span class="preview_category">Hot</span>
						</div>

						<strong class="preview_title">Feature post</strong>

						<p class="preview_description">This is a wider card with supporting text below as a natural lead-in to additional content</p>

						<a href="#">Continue reading</a>
					</div>
				</div>
			</div>
		</div>

		<div class="page_block">
			<footer class="footer row g-0">
				<div class="col-3">
					{{> logo}}
					<span class="footer_copyright">Copyright 2023-2024</span>
				</div>

				{{#each footer}}
					<div class="col-3">
						<span class="footer_title">{{title}}</span>
						{{> nav list=links isVertical=true}}
					</div>
				{{/each}}
			</footer>
		</div>

	</div>
</div>